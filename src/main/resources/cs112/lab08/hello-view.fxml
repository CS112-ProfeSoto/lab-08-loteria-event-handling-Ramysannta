<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs112.lab08.HelloController"
      spacing="10" alignment="center" prefWidth="350" prefHeight="500">

    <Label fx:id="titleLabel" style="-fx-font-size: 20pt; -fx-font-weight: bold;" />

    <ImageView fx:id="cardImageView" fitWidth="200" fitHeight="200" />

    <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" style="-fx-font-size: 12pt;" />

    <Button fx:id="drawCardButton" text="Draw Random Card" />

    <ProgressBar fx:id="gameProgressBar" prefWidth="200" />
</VBox>
